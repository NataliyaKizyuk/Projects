void generate_array(int A[], int n)
{
    int i;
    int value;
    
    value = n;
    
    for (i = 0; i < n; i++)
    {
        A[i] = value;
        value--;
        printf(" %d ", A[i]);
    }
}

/*Implementation of bubble_sort() */
void bubble_sort(int Array[],int n)
{
    int temp;
    int compare = 0;
    int swaps = 0;
    int pass = 0;
    int i,j;
    
    //nested  for loop () to compare each two elements of the array
    for(i=n - 1; i>=1; i--)
    {
        pass++;
        for(j=1; j<=i; j++)
        {
            compare++;                 //Number of comparisons increased for 1
            if(Array[j-1]>Array[j])    // if value of current element of array is bigger then the value of next element than:
            {
                //swapping
                temp = Array[j-1];     // value of the current element will be stored in temporary variable
                Array[j-1] = Array[j]; //and value of the next element become value of the current element
                //now, value of the current element that was stored in temporary variable goes to the next element of the array
                Array[j] = temp;  
                swaps++;                   // swapping complited. Number of swaps increased for 1.
            }
        }
    }
    
    printf("\n ARRAY IN ASCENDING ORDER SORTED BY BUBBLE SORT: \n\n");
    for(i=0; i<n; i++)
    {
        printf("\t %d", Array[i]);
    }
    printf("\n No. of comparisons  - %d",compare);
    printf("\n No. of swaps        - %d",swaps);
    printf("\n No. of passes  - %d",pass);
    
}//end bubble_sort()

